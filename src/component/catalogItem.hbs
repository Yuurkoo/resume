    <section class="col-8">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {{#each goodsList}}
              <div class="col">
                <div class="card">
                  <img src="{{img}}" class="card-img-top" alt="alt">
                    <div class="m-3">
                    {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase">Hot!</span>{{/if}}
                    {{#if isNew}}<span class="badge text-bg-primary rounded-pill">Новe</span>{{/if}}
                    </div>
                    <div class="card-body">
                        <a href="" class="btn btn-success">Швидка доставка</a>
                        <p></p>
                        <a href="" class="btn btn-secondary">Безкоштовна доставка</a>
                    <h5 class="card-title mt-4">{{name}}</h5>

                    <div class="mt-3">
                        {{#with review}}
                       <p class="card-text">{{amount}} {{text}}</p>
                       {{/with}}
                    </div>
                    <div class="mt-4">
                      <h4>{{price}}</h4>
                    </div>
                    <div class="mt-2">
                        <p>{{delivery}}</p>
                    </div>
                    <div>
                        {{#each buttons}}
                        {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                        <p></p>
                        {{#if isSecondary}}<a href="{{link}}" class="btn btn-secondary">{{text}}</a>{{/if}}
                        {{/each}}
                    </div>
                    <div class="mt-3">
                        {{#each characteristics}}
                        <div>
                            <ul>
                               <li>{{title}} : {{value}}</li>
                            </ul>
                        </div>
                        {{/each}}
                    </div>
                    </div>
                </div>
              </div>
               {{/each}}
            </div>
        </section>