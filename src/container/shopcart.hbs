
 <main>
    {{#with navigation}}
    <section class="card">
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link">{{text}}</a>
            </div>
            {{/each}}
            <div class="nav-item">
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </section>
    {{/with}}

    <br>

    <section>
        {{#with header}}
    <div>
        <h1>{{title}}</h1>
    </div>
    {{#with button}}
    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
    {{/with}}
        {{/with}}
    </section>

    <br>

    <div>
       <hr>
    </div>

{{> cartGoodsItem}}

    <br>
    <div>
        <hr>
    </div>

    <section>
        {{#with total}}
        <div class="pb-4">
        <h1 class="display-6"><strong>{{title}}</strong></h1>
        <h2 class="display-5"><strong>{{amount}}</strong></h2>
        <p>{{delivery}}</p>
        </div>
        <div>
            {{#each buttons}}
            <div>
             {{#if isSuccess}}<a href="{{link}}" class="btn btn-success">{{text}}</a>{{/if}}
            </div>
            <div class="mt-3">
             {{#if isOutline}}<a href="{{link}}" class="btn btn-outline-success">{{text}}</a>{{/if}}
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

     <br>
    <div>
        <hr>
    </div>

    <section class="row g-3">
        {{#with goodsOtherBlock}}
        <div class="text-center">
            <h1>{{title}}</h1>
        </div>
            {{#each cards}}
            <div class="col-4">
                <div class="card text-bg-light">
                    <img class="card-img-top" src="{{image}}" alt="alt">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase">hot!</span>{{/if}}
                        
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        {{/with}}    
    </section>

    
 </main>


